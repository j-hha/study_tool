<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <main>
      <aside>
        <% include ../partials/aside %>

      </aside>
      <!-- CURRENT USER'S TOPICS -->
      <div class="light-bulb"></div>
      <section class="topics">
        <h2>Your topics</h2>
        <% if (userTopics.length > 0) { %>
          <table>
            <tr id="header-row-one">
              <th>Title</th>
              <th>Description</th>
            </tr>
            <% for (var i = 0; i < userTopics.length; i++) { %>
              <tr>
                <td>
                  <a href="/topics/<%= userTopics[i].id; %>">
                  <%= userTopics[i].title; %>
                </a>
                </td>
                <td><%= userTopics[i].description; %></td>
              </tr>
            <% } %>
          </table>
        <% } else { %>
          <h3>Nothing to see, yet. Click 'add a topic' above to start working on your first set of flash cards.</h3>
        <% } %>
      </section>
      <!-- OTHER USERS' TOPICS -->
      <section class="topics">
        <h2>See what other people are studying</h2>
        <% if (otherTopics.length > 0) { %>
          <table>
            <tr id="header-row-two">
              <th>Title</th>
              <th>Description</th>
            </tr>
            <% for (var i = 0; i < Math.min(9, otherTopics.length); i++) { %>
              <tr>
                <td>
                  <a href="/topics/<%= otherTopics[i].id; %>">
                  <%= otherTopics[i].title; %>
                </a>
                </td>
                <td><%= otherTopics[i].description; %></td>
              </tr>
            <% } %>
          </table>
        <% } else { %>
          <h3>Nothing to see, yet. Share a link to this site with a friend and start cramming together.</h3>
        <% } %>
      </section>
    </main>
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
