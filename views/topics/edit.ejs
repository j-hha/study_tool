<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <main>
      <form class="form" action="/topics/<%= topic.id %>/?_method=PUT" method="POST">
        <legend>Edit topic</legend>
        <label for="title">title:</label>
        <input type="text" name="title" value="<%= topic.title %>" required>
        <label for="description">description:</label>
        <textarea name="description"><%= topic.description %></textarea>
        <input type="submit" value="update">
      </form>
      <form class="form" action="/topics/<%= topic.id; %>/?_method=DELETE" method="post">
        <legend>Delete topic</legend>
        <input class="delete-btn" type="submit" value="DELETE">
      </form>
    </main>
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
